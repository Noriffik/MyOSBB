@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="row">
    <div class="col-md-3">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/MyOSBB_1.png" alt="ASP.NET" class="img-responsive" />
                </div>
                <div class="item">
                    <img src="~/images/MyOSBB_2.png" alt="Visual Studio" class="img-responsive" />
                </div>
                <div class="item">
                    <img src="~/images/MyOSBB_3.png" alt="Package Management" class="img-responsive" />
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-9">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="col-md-9">
                <h2>Welcome @UserManager.GetUserName(User) to OSBB site.</h2>
                <h4>
                    As the member of OSBB you can get access to your personal information and common information of OSBB.<br />
                </h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h4>You can look at your invoices on the <a asp-area="" asp-controller="UserData" asp-action="Index">User data</a> page and make your <a asp-area="" asp-controller="Contributions" asp-action="Index">contributions</a> to OSBB </h4>
                </div>
                <div class="col-md-4">
                    <h4>Also you can edit your profile on the <a asp-area="" asp-controller="Manage" asp-action="Index">manage account</a> page and make <a asp-area="" asp-controller="Announcements" asp-action="Index">announcements</a></h4>
                </div>
                @if (User.IsInRole("Admins"))
                {
                    <div class="col-md-4">
                        <h4>As the admin you additionaly have access to all users data.</h4>
                    </div>
                }
                else
                {
                    <div class="col-md-4">
                        <h4>As the user you see and get information only for you and your flat.</h4>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="col-md-9">
                <h2>Welcome to OSBB site.</h2>
                <h4>
                    As the guest you can see only public information on the site.<br />
                    It is this page, page of public information about OSBB and contact page.
                </h4>
                <h4>To be a member of OSBB you need to live in our house. If you live in our house you can <a asp-area="" asp-controller="Account" asp-action="Register">register</a> as the user and after confirmation by admin you can <a asp-area="" asp-controller="Account" asp-action="Login">log in</a> as the user and get more functinalities of this site. </h4>
            </div>
        }
    </div>
</div>

